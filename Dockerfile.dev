FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY prisma.config.ts ./

# Install dependencies
RUN npm ci

# Copy Prisma schema (will be mounted via volume in dev)
COPY prisma ./prisma

# Copy source code (will be mounted via volume in dev)
COPY src ./src

# Expose port
EXPOSE 3000

# Start development server with hot reload
# Generate Prisma Client and run migrations at startup
CMD sh -c "npx prisma generate && npx prisma db push --skip-generate && npm run dev"

